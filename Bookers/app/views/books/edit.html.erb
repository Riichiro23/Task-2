<h2>Editing Book</h2>

<%= form_with model:@book, local:true do |f| %>

  <h6>Title</h6>
  <%= f.text_field :title %>

  <h6>Body</h6>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Update Book' %>
  <br>
  <%= link_to "Show |", book_path(@book.id) %>

  <%= link_to "Back", books_path %>
  
  <% if @book.errors.any? %>
  <div>
    <ul style="color: red">
     <h3>errors prohibited this obj from being saved</h3>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
 <% end %>

  
<% end %>

